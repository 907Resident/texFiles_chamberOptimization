doi = {10.1016/j.soilbio.2009.12.004},
file = {:C$\backslash$:/Users/moyoa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Forbrich et al. - 2010 - A comparison of linear and exponential regression for estimating diffusive CH4 fluxes by closed-chambers in pea.pdf:pdf},
