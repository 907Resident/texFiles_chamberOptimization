file = {:C$\backslash$:/Users/moyoa/Google Drive/PhD Dissertation/Other Projects/Deciduous{\_}Forest/Relevant{\_}Literature/Warner2017{\_}Article{\_}CO2+CH4{\_}Fluxes.pdf:pdf},
issn = {14350629},
journal = {Ecosystems},
