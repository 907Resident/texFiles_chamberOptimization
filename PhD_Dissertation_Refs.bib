doi = {10.1029/2005GC001090},
file = {:C$\backslash$:/Users/moyoa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Sdrolias, M{\"{u}}ller - 2006 - Controls on back-arc basin formation.pdf:pdf},
isbn = {15252027},
