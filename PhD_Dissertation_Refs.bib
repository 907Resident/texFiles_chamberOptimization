issn = {00380717},
journal = {Soil Biology and Biochemistry},
keywords = {Closed-chamber measurements,Flux calculation,Gas diffusion,Methane,Non-linearity,Peatlands,Regression},
number = {3},
pages = {507--515},
title = {{A comparison of linear and exponential regression for estimating diffusive CH4 fluxes by closed-chambers in peatlands}},
