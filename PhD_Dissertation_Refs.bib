pages = {196--211},
publisher = {Elsevier Ltd},
title = {{A methodology for quantifying risk and likelihood of failure for carbon dioxide injection into deep saline reservoirs}},
url = {http://dx.doi.org/10.1016/j.ijggc.2013.10.021},
