issn = {14329840},
journal = {Ecosystems},
keywords = {CH4 consumption,CO2 flux,Climate,Taiga},
number = {3},
pages = {269--282},
title = {{Controls on soil carbon dioxide and methane fluxes in a variety of taiga forest stands in interior Alaska}},
volume = {3},
year = {2000}
